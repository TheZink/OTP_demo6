pipeline {
    agent any
tools{
    maven 'MAVEN_HOME' // Maven3 is the name of *your own* defined maven name in Jenkins.
}
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/TheZink/OTP_demo6.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Code Coverage') {
            steps {
                bat 'mvn jacoco:report'
            }
        }
        stage('Publish Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
        stage('Publish Coverage Report') {
            steps {
                jacoco()
            }
        }
    }
}
